            .column
                p foo
            .column
                p bar
        div.row: p.column: span Hello world

        input(type="text",name="pseudo",placeholder="Votre pseudo")
        input(type="submit")

        -var language = "jade"
        if language === "jade"
            p awesome
        else
            p not awesome
        -var friends = 10
        case friends
            when 0
                p you have no friends
            when 1
                p you have 1 friend
            default
                p you have #{friends} friends
        -var tabs = ['foo','bar','baz']
        ul
            //le egal veut dire que ce sera une variable == #{item}
            each item in tabs
                li= item
            for item,i in tabs
                li= item
                    div= i
